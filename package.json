{
  "name": "olympia",
  "version": "0.0.0",
  "private": true,
  "sourceType": "module",
  "scripts": {
    "babel-node": "babel-node --presets=@babel/preset-env --ignore='foo|bar|baz'",
    "serve": "nodemon --exec yarn run babel-node -- build/bin/www",
    "build": "rimraf build/ && babel ./ --out-dir build/ --ignore ./node_modules,./.babelrc,./package.json,./npm-debug.log --copy-files",
    "start": "yarn run build && node build/bin/www",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "dependencies": {
    "bcrypt": "^3.0.6",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^8.0.0",
    "express": "~4.16.1",
    "helmet": "^3.20.0",
    "mongoose": "^5.6.9",
    "morgan": "~1.9.1",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "babel-jest": "^24.9.0",
    "rimraf": "^2.6.3"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "rules": {
      "semi": "error",
      "quotes": [
        "error",
        "single"
      ],
      "no-undef": "error",
      "comma-dangle": [
        "error",
        "never"
      ],
      "no-var": "error",
      "eol-last": [
        "error",
        "never"
      ],
      "no-trailing-spaces": "error",
      "skipBlankLines": "false",
      "prefer-const": "error",
      "no-magic-numbers": [
        "error",
        {
          "detectObjects": true
        }
      ]
    }
  }
}
